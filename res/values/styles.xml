<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        
    <!-- <style name="AppBaseTheme" parent="android:Theme.Material"> -->

        <!-- Main theme colors -->
        <!--
        your app's branding color (for the app bar)
        <item name="android:colorPrimary">@color/action_bar_color</item> 
        darker variant of colorPrimary (for status bar, contextual app bars)
        <item name="android:colorPrimaryDark">@color/notification_bar_color</item>
        theme UI controls like checkboxes and text fields
        <item name="android:colorAccent">@color/action_bar_color</item>
        enable window content transitions
        <item name="android:windowContentTransitions">true</item>
        defines default touch feedback color for ripple
        <item name="android:colorControlHighlight">@color/action_bar_color</item> 
        -->
        
        <item name="android:actionBarStyle">@color/action_bar_color</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>